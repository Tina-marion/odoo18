<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Bid Form View -->
    <record id="view_purchase_bid_form" model="ir.ui.view">
        <field name="name">purchase.bid.form</field>
        <field name="model">purchase.bid</field>
        <field name="arch" type="xml">
            <form string="Purchase Bid">
                <header>
                    <button name="action_submit_bid" type="object" string="Submit Bid" 
                            invisible="state != 'draft'" 
                            class="btn-primary"/>
                    <button name="action_select_as_winner" type="object" string="Select as Winner" 
                            invisible="state in ['won', 'lost']" 
                            groups="purchase.group_purchase_user"
                            class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,won,lost"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="vendor_id"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="delivery_date"/>
                            <field name="is_winner" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Terms & Conditions">
                            <field name="terms_conditions" placeholder="Enter any special terms and conditions for this bid..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Purchase Bid List View -->
    <record id="view_purchase_bid_list" model="ir.ui.view">
        <field name="name">purchase.bid.list</field>
        <field name="model">purchase.bid</field>
        <field name="arch" type="xml">
            <list string="Purchase Bids">
                <field name="name"/>
                <field name="order_id"/>
                <field name="vendor_id"/>
                <field name="amount"/>
                <field name="delivery_date"/>
                <field name="state" decoration-success="state == 'won'" decoration-danger="state == 'lost'" decoration-info="state == 'received'"/>
                <field name="is_winner"/>
            </list>
        </field>
    </record>
    
    <!-- Purchase Bid Action -->
    <record id="action_purchase_bid" model="ir.actions.act_window">
        <field name="name">Purchase Bids</field>
        <field name="res_model">purchase.bid</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Purchase Bid Menu -->
    <menuitem id="menu_purchase_bids" 
              name="Purchase Bids" 
              parent="purchase.menu_procurement_management" 
              action="action_purchase_bid"
              sequence="10"/>
</odoo>
