<odoo>
    <!-- Purchase Request Tree View -->
    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="name">purchase.request.tree</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <list string="Purchase Requests">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="date_request"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Purchase Request Form View -->
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form string="Purchase Request">
                <header>
                    <button name="action_submit" type="object" string="Submit" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" invisible="state != 'submitted'" class="btn-success"/>
                    <button name="action_done" type="object" string="Done" invisible="state != 'approved'" class="btn-warning"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="requester_id"/>
                        <field name="date_request"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="uom_id"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Purchase Request Action (MOVED BEFORE MENU ITEMS) -->
    <record id="action_purchase_request" model="ir.actions.act_window">
        <field name="name">Purchase Requests</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create purchase requests here.
            </p>
        </field>
    </record>

    <!-- Purchase Request Menu Items (NOW AFTER ACTION) -->
    <menuitem id="menu_purchase_request_root" name="Purchase Requests" sequence="10"/>
    <menuitem id="menu_purchase_request" name="Requests" parent="menu_purchase_request_root" action="action_purchase_request"/>

</odoo>
