<odoo>
    <!-- Purchase Request Tree View -->
    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="name">purchase.request.tree</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <list string="Purchase Requests">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="date_request"/>
                <field name="state" decoration-danger="state == 'rejected'" decoration-success="state == 'approved'" decoration-warning="state == 'submitted'" decoration-info="state == 'rfq_created'"/>
                <field name="rfq_id" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Purchase Request Form View -->
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form string="Purchase Request">
                <header>
                    <button name="action_submit" type="object" string="Submit" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" invisible="state != 'submitted'" class="btn-success"/>
                    <button name="action_reject" type="object" string="Reject" invisible="state != 'submitted'" class="btn-danger"/>
                    <button name="action_create_rfq" type="object" string="Create RFQ" invisible="state != 'approved'" class="btn-warning"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state not in ['rejected']" class="btn-secondary"/>
                    <button name="action_done" type="object" string="Done" invisible="state not in ['approved', 'rfq_created']" class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rfq_created,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_rfq" class="oe_stat_button" icon="fa-shopping-cart" invisible="rfq_count == 0">
                            <field name="rfq_count" widget="statinfo" string="RFQ"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="requester_id"/>
                        <field name="date_request"/>
                        <field name="state" readonly="1"/>
                        <field name="rejection_reason" invisible="state != 'rejected'" readonly="1"/>
                        <field name="rfq_id" invisible="state != 'rfq_created'" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="uom_id"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Purchase Request Rejection Wizard -->
    <record id="view_purchase_request_rejection_wizard" model="ir.ui.view">
        <field name="name">purchase.request.rejection.wizard.form</field>
        <field name="model">purchase.request.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Purchase Request">
                <group>
                    <field name="request_id" readonly="1"/>
                    <field name="rejection_reason" placeholder="Please provide the reason for rejection..."/>
                </group>
                <footer>
                    <button name="action_reject_request" type="object" string="Reject" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Purchase Request Action (MOVED BEFORE MENU ITEMS) -->
    <record id="action_purchase_request" model="ir.actions.act_window">
        <field name="name">Purchase Requests</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create purchase requests here.
            </p>
        </field>
    </record>

    <!-- Purchase Request Menu Items (NOW AFTER ACTION) -->
    <menuitem id="menu_purchase_request_root" name="Purchase Requests" sequence="10"/>
    <menuitem id="menu_purchase_request" name="Requests" parent="menu_purchase_request_root" action="action_purchase_request"/>

</odoo>
